<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
       <div class="form-group">
        <%= f.label :postal_code %>
        <%= f.text_area :postal_code, class: "form-control postal_code", id: "user_postcode" %>
      </div>
       <div class="form-group">
        <%= f.label :address %>
        <%= f.text_area :address, class: "form-control address", id: "user_address" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
    <%= link_to "Password Update", edit_user_registration_path, class: "btn btn-primary" %>
  </div>
</div>
